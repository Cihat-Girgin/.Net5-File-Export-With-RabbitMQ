@model List<RabbitMqFileExport.Model.Company>

@{
    ViewBag.Title = "Companies";
    Layout = "_Layout";
}


<div class="container mt-5">

    <div class="row">
        <div class="col-6">
            <h4>Companies</h4>
        </div>
        <div class="col-6">
            <form asp-controller="Files" asp-action="AddFile" method="post" class="form-inline float-right">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" required class="form-control" name="fileName" placeholder="Enter file name">
                </div>
                <button type="submit" class="btn btn-success btn-sm mb-2">Create Excel </button>
            </form>
        </div>

    </div>
    <div class="row mt-3 float-none">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Tax No</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>@item.City</td>
                    <td>@item.Country</td>
                    <td>@item.TaxNo</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>