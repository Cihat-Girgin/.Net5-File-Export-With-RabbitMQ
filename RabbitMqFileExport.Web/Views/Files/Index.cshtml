@model List<RabbitMqFileExport.Model.ExcelFile>

@{
    ViewBag.Title = "Files";
    Layout = "_Layout";
}

<h2>Files</h2>

@section Scripts
{
   <script>
       $(document).ready(function () {
           var hasStartCreatingExcel = '@TempData["StartCreatingExcel"]';
           if (hasStartCreatingExcel) {
               Swal.fire({
                   position: 'top-end',
                   icon: 'success',
                   title: 'Excel creation process has started. You will receive notification when finished.',
                   showConfirmButton: false,
                  timer:2500
               })
           }
       })
   </script>
}

<div class="container mt-5">

    <div class="row">
        <div class="col-6">
            <h4>Files</h4>
        </div>
    </div>
    <div class="row mt-3 float-none">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Status</th>
                <th scope="col">Tool</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.status</td>
                    <td><a href="~/files/@item.Name" class="btn-link">Download</a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>